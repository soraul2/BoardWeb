<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>{{board.title}} - Community</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor.min.css" />

    <style>
        /* Apple Style CSS (공통) */
        :root {
            --apple-bg: #f5f5f7;
            --apple-card: #ffffff;
            --apple-text: #1d1d1f;
            --apple-blue: #0071e3;
            --apple-gray: #86868b;
            --apple-border: #d2d2d7;
            --apple-red: #ff3b30;
        }
        body {
            background-color: var(--apple-bg);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            color: var(--apple-text);
        }

        /* 헤더 */
        header {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            padding: 15px 0;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 1px solid var(--apple-border);
        }
        header a {
            color: var(--apple-text);
            text-decoration: none;
            margin: 0 15px;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.2s;
        }
        header a:hover { color: var(--apple-blue); }

        /* 메인 컨테이너 */
        .container {
            max-width: 900px; /* 뷰어라 조금 넓게 */
            margin: 60px auto;
            padding: 0 20px;
        }

        /* 상세 보기 카드 */
        .view-card {
            background: var(--apple-card);
            border-radius: 20px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
            padding: 50px;
            position: relative;
        }

        /* 게시글 헤더 (제목, 정보) */
        .post-header {
            border-bottom: 1px solid #eeeeee;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        .post-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 15px;
            word-break: break-all;
        }
        .post-meta {
            display: flex;
            justify-content: space-between;
            color: var(--apple-gray);
            font-size: 14px;
        }
        .meta-left span { margin-right: 15px; }
        .meta-label { font-weight: 600; margin-right: 5px; }

        /* 게시글 본문 (뷰어 영역) */
        #viewer {
            min-height: 200px;
            margin-bottom: 50px;
            font-size: 16px; /* 뷰어 폰트 크기 조정 */
        }

        /* Toast UI 뷰어 내부 스타일 조정 (선택사항) */
        .toastui-editor-contents {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif !important;
        }

        /* 버튼 영역 */
        .btn-area {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #eeeeee;
            padding-top: 30px;
        }

        .btn-list {
            background-color: #f5f5f7;
            color: var(--apple-text);
            padding: 10px 24px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: 0.2s;
        }
        .btn-list:hover { background-color: #e5e5e7; color: var(--apple-text); }

        .btn-group-right a, .btn-group-right button {
            margin-left: 8px;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: 0.2s;
        }

        .btn-edit { background-color: #e8f2ff; color: var(--apple-blue); }
        .btn-edit:hover { background-color: #d1e6ff; }

        .btn-delete { background-color: #ffe5e5; color: var(--apple-red); }
        .btn-delete:hover { background-color: #ffd1d1; }

    </style>
</head>
<body>

<header>
    <nav>
        <a href="/">Home</a>
        <a href="/board/list" style="color: var(--apple-blue);">Board</a>
        {{#isLogin}}
            <a href="/user/myinfo">My Info</a>
            <a href="/logout">Logout</a>
        {{/isLogin}}
    </nav>
</header>

<div class="container">
    <div class="view-card">
        {{#error}}
            <script>
                alert("{{error}}");
                history.replaceState({}, null, location.pathname);
            </script>
        {{/error}}

        {{#board}}
            <div class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <div class="post-meta">
                    <div class="meta-left">
                        <span><span class="meta-label">Writer</span> {{nickname}}</span> <span><span class="meta-label">Date</span> {{date}}</span>
                    </div>
                    <div class="meta-right">
                        <span><span class="meta-label">Views</span> {{count}}</span>
                    </div>
                </div>
            </div>

            <div id="db-content" style="display:none;">{{content}}</div>

            <div id="viewer"></div>

        {{/board}}

        <div class="btn-area">
            <a href="/board/list" class="btn-list">← 목록으로</a>

            {{#isLogin}}
                <div class="btn-group-right">
                    <a href="/board/edit/{{board.num}}" class="btn-edit">수정</a>
                    <form action="/board/delete" method="post" style="display:inline;" onsubmit="return confirm('정말 삭제하시겠습니까?');">
                        <input type="hidden" name="num" value="{{board.num}}">
                        <button type="submit" class="btn-delete">삭제</button>
                    </form>
                </div>
            {{/isLogin}}
        </div>

    </div>
</div>

<script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>
<script>
    // 1. 숨겨둔 DB의 원본 마크다운 내용을 가져옴
    const content = document.querySelector('#db-content').innerText;

    // 2. 뷰어 실행 (HTML로 예쁘게 변환해서 보여줌)
    const viewer = toastui.Editor.factory({
        el: document.querySelector('#viewer'),
        viewer: true,
        initialValue: content
    });
</script>

</body>
</html>